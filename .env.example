# Financial Wisdom Platform Environment Configuration

# Application
APP_NAME="Financial Wisdom Platform"
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=8000

# Database Configuration
POSTGRES_DB=financial_wisdom
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_change_this
DB_URL=postgresql+asyncpg://postgres:secure_password_change_this@localhost:5432/financial_wisdom
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_DB=0
REDIS_CELERY_DB=1
REDIS_SESSION_DB=2

# AI Service Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AI_PRIMARY_MODEL=claude-3-sonnet-20240229
AI_SECONDARY_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS_PER_REQUEST=2000
AI_REQUEST_TIMEOUT=30
AI_REQUESTS_PER_MINUTE=50
AI_DAILY_REQUEST_LIMIT=1000

# Web Scraping Configuration
SCRAPING_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPING_REQUEST_DELAY=2.0
SCRAPING_MAX_CONCURRENT_REQUESTS=10
SCRAPING_RETRY_TIMES=3
SCRAPING_TIMEOUT=30

# Content Generation Configuration
CONTENT_DAILY_GENERATION_TIME=06:00
CONTENT_QUALITY_THRESHOLD=8.0
CONTENT_SIMILARITY_THRESHOLD=0.8
CONTENT_CACHE_TTL=604800
CONTENT_TRENDING_CACHE_TTL=21600

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d

# Email Configuration (for notifications)
EMAIL_FROM=noreply@financial-wisdom.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# External Services
WEBHOOK_URL=https://your-webhook-endpoint.com/notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Cost Management
DAILY_COST_LIMIT=50.00
MONTHLY_COST_LIMIT=500.00
COST_ALERT_THRESHOLD=0.8

# Feature Flags
ENABLE_WEB_SCRAPING=true
ENABLE_SOCIAL_COLLECTION=false
ENABLE_REAL_TIME_GENERATION=true
ENABLE_CACHE_OPTIMIZATION=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/financial_wisdom.log

# Development Settings
RELOAD_ON_CHANGE=false
PROFILE_PERFORMANCE=false